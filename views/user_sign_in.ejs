<link rel="stylesheet" href="/css/sign-in.css">
<script src="https://www.google.com/recaptcha/api.js?render=6LeQgqoZAAAAAIZG3GChwyuvOP1b0dMdw2mYZd1s"></script>
<div class="form-cntnr">
    <h3><i class="fas fa-user-lock"></i>Sign in </i></h3>
    
    <form action="/users/create-session" id="sign-in-form" method="POST">
        <div class="form-group form-group-cstm">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" placeholder="Email" required>
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group form-group-cstm">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="password" required>
        </div>
        <div class="btn-cntnr">
        <button type="submit" class="btn btn-primary btn-custom">Sign-in</button>
        </div>
    </form>
    <p class="text-center"><small><a href="/users/forget-password">Forgot Password</a></small></p>
    
    <p class="text-center other-sign-in">
        <small>Or you can sign-in with:</small><br>
        
        <a href="/users/auth/google" class="badge badge-danger"><i class="fab fa-google"></i></a>
    </p>
</div>
<script src="/js/signin.js"></script>
