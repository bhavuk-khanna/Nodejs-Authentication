<link rel="stylesheet" href="/css/sign-up.css">
<script src="https://www.google.com/recaptcha/api.js?render=6LeQgqoZAAAAAIZG3GChwyuvOP1b0dMdw2mYZd1s"></script>

<div class="form-cntnr">
    <h3><i class="fas fa-user-lock"></i>Sign Up </i></h3>
    
    <form action="/users/create" id="create-user-form" method="POST">        
        <div class="form-group form-group-cstm">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" aria-describedby="emailHelp" name="name" placeholder="Your Full Name" required>
        </div>
        <div class="form-group form-group-cstm">
            <label for="Email">Email address</label>
            <input type="email" class="form-control" id="Email" aria-describedby="emailHelp" name="email" placeholder="Your Email Address" required> 
        </div>
        <div class="form-group form-group-cstm">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="Password" required>
        </div>
        <div class="form-group form-group-cstm">
            <label for="ConfirmPassword"> Confirm Password</label>
            <input type="password" class="form-control" id="ConfirmPassword"name="confirm_password" placeholder="Confirm Password" required>
        </div>
        <div class="btn-cntnr">
        <button type="submit" class="btn btn-primary btn-custom">Sign-up</button>
        </div>
    </form>
    <p class="text-center"><small><a href="/users/signin">Sign in</a></small></p>
    
    <p class="text-center other-sign-in">
        <small>Or you can sign-in with:</small><br>
        
        <a href="/users/auth/google" class="badge badge-danger"><i class="fab fa-google"></i></a>
    </p>
</div>
<script src="/js/signup.js"></script>
